<div id="chat" class="row" style="">
    <div class="messages-box">  
        <% site.chat.forEach(function(message){ %>
            <div class="row">
                <span class="<%= message.type %> badge"><%= message.content %></span>
            </div>
        <% }); %>
    </div>

    <div class="input-box">
        <div class="row" style="margin-bottom: 0; border-top: 1px solid rgba(160,160,160,0.2); position: relative">
            <div class="col s12">
                <div class="input-field">
                    <input id="email_inline" type="email" class="validate">
                    <label for="email_inline">Digite aqui sua mensagem</label>
                </div>
            </div>
            <button id="send">
                <i class="material-icons grey-text text-darken-1 right-align" style="margin-top: 32px;">send</i>
            </button>
        </div> 
    </div>
</div>